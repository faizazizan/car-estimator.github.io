<body>

<div id="calculator">
  <h2>Car Affordability Calculator</h2>
  <label for="salary">Monthly Salary ($):</label>
  <input type="number" id="salary" placeholder="Enter your annual salary">

  <button onclick="calculateBudget()">Calculate Budget</button>

  <div id="result"></div>
</div>

<script>
  function calculateBudget() {
    var salary = parseFloat(document.getElementById('salary').value);

    if (isNaN(salary) || salary <= 0) {
      alert('Please enter a valid salary.');
      return;
    }

    var budget = salary * 12;
    displayResult(budget);
  }

  function displayResult(budget) {
    var resultElement = document.getElementById('result');
    resultElement.innerHTML = '<h3>You can afford a car up to $' + budget.toFixed(2) + '</h3>';
  }
</script>

</body>
